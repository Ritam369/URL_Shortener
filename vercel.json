{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/((?!api).*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$",
      "dest": "/frontend/dist/$1.$2"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri"
  },
  "functions": {
    "backend/index.js": {
      "maxDuration": 30
    }
  }
}
